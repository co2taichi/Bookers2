<div class="container">
  <div>
    <h2>User Info</h2>
    <table lass="UserInfo">
      <tr class="user_image">
        <th>
          <% if @book.user.image.attached? %>
            <%= image_tag @book.user.image, size: "100x100" %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
        </th>
        <th></th>
      </tr>
      <tr>
        <th><p>name</p></th>
          <th><p><%= @book.user.name %></p></th>
      </tr>
      <tr>
        <th><p>introduction</p></th>
          <th><p><%= @book.user.introduction %></p></th>
      </tr>
    </table>
    <%= link_to "userinfo", edit_user_path(current_user) %>
      <div class="create_form">
        <h2>New book</h2>
        <%= form_with model: Book.new, url: "/books" do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
          <p>Opinion</p>
          <%= f.text_area :body %>
          <div><%= f.submit 'Create Book'%></div>
        <% end %>
      </div>
  </div>

  <table>
    <tr>
      <td>
        <% if @book.user.image.attached? %>
          <%= image_tag @book.user.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
      </td>
      <td><%= link_to "#{@book.user.name}", user_path(@book.user.id) %></td>
      <td><%= link_to "#{@book.title}", book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <% if @book.user.id== current_user.id %>

        <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
        <td><%= link_to "Delete", delete_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      <% end %>
    </tr>
  </table>
</div>
