<%= render 'layouts/successmessage' %>
<div class="container">
 <%= render 'layouts/createform', who_user: @book.user %>
  <table>
    <tr>
      <td>
        <%= render 'layouts/userimage', who_user: @book.user %>
      </td>
      <td><%= link_to "#{@book.user.name}", user_path(@book.user.id) %></td>
      <td><%= link_to "#{@book.title}", book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <% if @book.user.id== current_user.id %>
        <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
        <td><%= link_to "Delete", delete_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      <% end %>
    </tr>
  </table>
</div>
