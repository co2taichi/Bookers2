<%= render 'layouts/successmessage' %>
<div class="container">
  <div class="row">

    <%= render 'layouts/createform', who_user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverth">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        <thead>
        <tbody>
          <% @books.each do |books| %>
              <tr>
                <td>
                  <%= link_to user_path(books.user.id) do %>
                    <%= render 'layouts/userimage', who_user: books.user, image_size: "76x80" %>
                  <% end %>
                </td>
                <td><span><%= link_to "#{books.title}", book_path(books.id) %></span></td>
                <td><span><%= books.body %></span></td>
              </tr>
          <% end %>
        <tbody>
      </table>
    </div>
  </div>
</div>
