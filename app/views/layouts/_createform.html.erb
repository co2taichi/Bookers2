<div class="col-md-3">
  <h2>User Info</h2>
  <% if who_user.profile_image.attached? %>
    <%= image_tag who_user.profile_image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>
  <table class="table">
    <tr>
      <th>name</th>
      <th><%= who_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= who_user.introduction %></th>
    </tr>
  </table>
  <div class="row">
    <%= link_to edit_user_path(who_user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
  <div class="create_form">
    <h2 class="mt-3">New book</h2>
    <%= form_with model: Book.new, url: "/books" do |f| %>
    <div class="form-group">
      <label>Title</label>
      <%= f.text_field :title ,class: "form-control" %>
    </div>
    <div class="form-group">
      <label>Opinion</label>
      <%= f.text_area :body,class: "form-control" %>
    </div>
      <div><%= f.submit 'Create Book' ,class: "btn btn-success"%></div>
    <% end %>
  </div>
</div>